---
// Component Imports
import Location from '../components/location.astro';

// Component Script:
let title = 'PantherFi';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<style global lang="scss">
		@import "../styles/global.scss";
	</style>
	<style lang="scss">
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);

			img {
				height: 4em;
			}

			margin-bottom: 2rem;
		}

		main {
			width: 100%;
			max-width: 1000px;
		}
	</style>
</head>
<body>
	<header>
		<div>
			<img src="/assets/logo.svg" alt="PantherFi logo">
		</div>
	</header>
	<main>
		<Location name="Hillman Library - First Floor" status="up" down={22} up={41} ping={5} />
		<Location name="Hillman Library - Third Floor" status="up" down={24} up={37} ping={7} />
		<Location name="Hillman Library - Fourth Floor" status="up" down={21} up={36} ping={6} />
	</main>
</body>
</html>
